{
  "manifest_version": 3,
  "name": "GitHub Repo Explainer",
  "version": "1.0",
  "description": "Explains what a GitHub repository does in simple terms using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GitHub Repo Explainer Settings"
  },
  "options_page": "options.html"
}